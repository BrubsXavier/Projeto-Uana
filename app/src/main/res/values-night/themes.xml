<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Uana" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/terracotta_light</item>
        <item name="colorPrimaryVariant">@color/terracotta</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:background">@color/darkgray</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColorHint">@color/darkgray</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sand_light</item>
        <item name="colorSecondaryVariant">@color/sand</item>
        <item name="colorOnSecondary">@color/lightgray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>